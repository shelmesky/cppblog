<% c++ #include "content.h" %>
<% skin my_skin %>
<% view message uses content::message %>
<% template render() %>
<html>
  <body>
    <h1><%= text %> World!</h1>

    <div>
    <% foreach article in article_list %>
        <ul>
        <% item %>
            <li> <%= article.id %>  <%= article.title %> <%= article.keyword %> <%= article.dummy_body %> <%= article.real_body %></li>
        <% end %>
        </ul>
    <% empty %>
        没有文章
    <% end %>
    </div>

    <div>
    <p>
    <a href="/page/<%= prev_page_number %>">上一页</a> &nbsp; &nbsp; &nbsp;
    <a href="/page/<%= next_page_number %>">下一页</a>
    </p>
     </div>
  </body>
</html>
<% end template %>
<% end view %>
<% end skin %>